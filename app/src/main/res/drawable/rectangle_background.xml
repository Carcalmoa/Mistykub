<!-- res/drawable/rectangle_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#D3D3D3" /> <!-- Set your desired background color -->

    <!-- Border color and width (optional) -->
    <stroke
        android:color="#808080"
    android:width="1dp" />

    <!-- Corners (optional) -->
    <corners android:radius="8dp" /> <!-- Set your desired corner radius -->

</shape>
